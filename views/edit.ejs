<%- include header %>
<form role="form" method="post">
	<div class="form-group">
		<label for="name">标题</label>
		<input type="text" class="form-control" id="name" name="title" value="<%= doc.title %>" disabled="disabled">
	</div>
	<div class="form-group">
		<label for="name">正文</label>
		<textarea class="form-control" name="post" rows="20" cols="100"><%= doc.post %></textarea>
	</div>
	<div class="form-group">
		<button type="submit" class="btn btn-blue">保存修改</button>
	</div>
</form>
<%- include footer %>